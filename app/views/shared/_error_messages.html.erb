<% if @user.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        <%= t :form_errors, count: @user.errors.count %>.
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><i class="icon-remove-sign "></i> <%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>